<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:VRCFaceTracking.Avalonia.Controls">

  <Style Selector="controls|ContentExample">
    <Setter Property="Padding" Value="15" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{DynamicResource SystemChromeMediumLowColor}"
                CornerRadius="3"
                Padding="{TemplateBinding Padding}">
          <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding Template}" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
